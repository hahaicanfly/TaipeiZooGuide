<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/view_padding">

    <TextView
        android:id="@+id/tv_plant_detail_name_ch"
        style="@style/TitileStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="植物名稱" />

    <TextView
        android:id="@+id/tv_plant_detail_name_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_detail_name_ch" />

    <TextView
        android:id="@+id/tv_plant_detail_alsoKnow_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content_area"
        style="@style/SubtitleStyle"
        android:text="@string/text_alsoKnow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_detail_name_en" />

    <TextView
        android:id="@+id/tv_plant_detail_alsoKnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_detail_alsoKnow_title" />

    <TextView
        android:id="@+id/tv_plant_detail_brief_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content_area"
        style="@style/SubtitleStyle"
        android:text="@string/text_brief"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_detail_alsoKnow" />

    <TextView
        android:id="@+id/tv_plant_detail_brief_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_detail_brief_title" />


    <TextView
        android:id="@+id/tv_plant_detail_feature_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content_area"
        style="@style/SubtitleStyle"
        android:text="@string/text_feature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_detail_brief_content" />

    <TextView
        android:id="@+id/tv_plant_detail_feature_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_detail_feature_title" />


    <TextView
        android:id="@+id/tv_plant_detail_application_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content_area"
        style="@style/SubtitleStyle"
        android:text="@string/text_application"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_detail_feature_content" />

    <TextView
        android:id="@+id/tv_plant_detail_application_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_detail_application_title" />

    <TextView
        android:id="@+id/tv_plant_detail_last_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_detail_application_content" />


</androidx.constraintlayout.widget.ConstraintLayout>
